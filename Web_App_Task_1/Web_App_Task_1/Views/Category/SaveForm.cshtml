<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.intellisense.js"></script>


<div class="container" style="margin-top:30px">
    <div class="col-lg-12 row">
        <div class="col-lg-12">
            <div class="col-lg-12 row form-group">
                <div class="col-lg-3">
                    <label>Category Name</label>
                </div>
                <div class="col-lg-4">
                    <input type="text" id="CatName" class="form-control" placeholder="Enter category Name" />
                </div>
            </div>
            <div class="col-lg-12 row">
                <div class="col-lg-3">
                    <label>Default Image</label>
                </div>
                <div class="col-lg-4">
                    <input type="file" id="imageid" class="form-control" />
                </div>
            </div>
            <div class="col-lg-12 row">
                <div class="col-lg-3">

                </div>
                <div class="col-lg-4 ">
                    <button class="btn btn-success " id="Savebtn" style="margin-left:170px">Save</button>&nbsp;&nbsp;<button class="btn btn-success pull-right " id="Cancelbtn">Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>


<script>
    $('#Savebtn').click(function () {

        var name = $('#CatName').val();
        var image = $('#imageid').val();
        $.ajax({
            url: '/Category/Save/',
            type: 'POST',
            data: {
                name: name,
                image: image,
            },
            success: function (result) {
                alert(result);
            },
            complete: function () {
                window.location.href = '@Url.Action("CategoryList", "Category")';
            }
        });
    })

    $('#Cancelbtn').click(function () {
        window.location.href = '@Url.Action("CategoryList", "Category")';

    })
</script>